{
  "compilerOptions": {
    "types": ["vuetify"],
    "strict": true,
    "moduleResolution": "node",
    "module": "ESNext",
    "target": "ESNext",
    "isolatedModules": true,
    "esModuleInterop": true,
    "jsx": "preserve",
    "resolveJsonModule": true,
    "lib": ["ESNext", "DOM"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.vue"]
}
